{
  "name": "@sonnenreich/contact",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "src/app/**",
    "src/components/**",
    "public/**",
    "next.config.js",
    "tailwind.config.js",
    "postcss.config.js",
    "tsconfig.json"
  ],
  "scripts": {
    "dev": "next dev -p 3002",
    "build:app": "next build",
    "start": "next start -p 3002",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "build": "tsup",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist && rm -rf .next"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "module": "./dist/index.mjs",
      "import": "./dist/index.js"
    },
    "./action": {
      "types": "./dist/actions.d.ts",
      "module": "./dist/actions.mjs",
      "import": "./dist/actions.js"
    },
    "./form": {
      "types": "./dist/ContactForm.d.ts",
      "module": "./dist/ContactForm.mjs",
      "import": "./dist/ContactForm.js"
    }
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "next": "^15.3.0",
    "nodemailer": "^6.10.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.17.31",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.0.1",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "postcss": "^8",
    "prisma": "^6.6.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "tsup": "^8.0.0"
  }
} 
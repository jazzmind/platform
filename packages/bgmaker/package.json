    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.17.31",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.0.1",
    "eslint": "^9",
